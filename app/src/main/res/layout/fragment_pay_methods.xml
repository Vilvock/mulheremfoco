                                            android:text="Economize"
                                            android:textColor="@color/white" />

                                        <TextView
                                            android:id="@+id/textView11"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="42%"
                                            android:textColor="@color/white"
                                            android:textSize="16sp" />

                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

